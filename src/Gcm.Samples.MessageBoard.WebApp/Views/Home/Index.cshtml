@model Gcm.Samples.MessageBoard.WebApp.Models.HomeIndexViewModel
@{
    ViewBag.Title = "Index";
}
<div>
    <br />
    <div>
        <div class="pull-right">
            <a href="@Url.Action("Post", "Messages")">Post Message</a>
        </div>
        <label>Messages: @Model.Messages.Length</label>
    </div>
    <ul class="list-group">
        @foreach (var message in Model.Messages)
        {
            <li class="list-group-item">
                @message.Text
            </li>
        }
    </ul>
</div>
